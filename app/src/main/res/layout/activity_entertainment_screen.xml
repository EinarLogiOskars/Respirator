<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundGrey"
    tools:context="com.group5.respirator.Entertainment.EntertainmentScreen"
    tools:layout_editor_absoluteY="25dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2">

        <TextView
            android:id="@+id/entertainmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="443dp"
            android:layout_marginStart="545dp"
            android:layout_marginTop="50dp"
            android:text="Vælg et spil"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/homeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="75dp"
            android:layout_height="71dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/button8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeText"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:layout_marginBottom="308dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="1170dp"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeBtn" />

    </android.support.constraint.ConstraintLayout>



    <Button
        android:id="@+id/callButton"
        android:layout_width="1280dp"
        android:layout_height="100dp"
        android:background="@drawable/kald"
        android:drawableLeft="@drawable/ic_add_alert_black_80dp"
        android:drawableRight="@drawable/ic_add_alert_black_80dp"
        android:drawableTint="@android:color/white"
        android:text="Kald"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        android:drawablePadding="2dip"
        android:paddingLeft="300dip"
        android:paddingRight="300dip"
        app:layout_constraintBottom_toBottomOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="28dp"
        android:background="@color/Grå"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_container">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/hangmanButton"
                android:layout_width="187dp"
                android:layout_height="126dp"
                android:layout_margin="30dp"
                android:background="@drawable/hangman_game"
                android:paddingTop="84dp"
                android:text="Hangman"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/tictactoeButton"
                android:layout_width="187dp"
                android:layout_height="126dp"
                android:layout_margin="30dp"
                android:background="@drawable/tic_tac_toe"
                android:paddingTop="84dp"
                android:text="Tic Tac Toe"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/memoryButton"
                android:layout_width="187dp"
                android:layout_height="126dp"
                android:layout_margin="30dp"
                android:background="@drawable/memory_game"
                android:paddingTop="84dp"
                android:text="Memory"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </HorizontalScrollView>


</android.support.constraint.ConstraintLayout>
