<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group5.respirator.Settings.Fragments.SoundFragment">


    <Button
        android:id="@+id/muteBtn"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/setting2"
        android:drawablePadding="2dip"
        android:drawableTint="@android:color/white"
        android:drawableTop="@drawable/ic_volume_off_black_120dp"
        android:paddingTop="25dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/midVolBtn"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginEnd="490dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/setting2"
        android:drawablePadding="2dip"
        android:drawableTint="@android:color/white"
        android:drawableTop="@drawable/ic_volume_down_black_120dp"
        android:paddingTop="25dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/maxVolBtn"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/setting2"
        android:drawablePadding="2dip"
        android:drawableTint="@android:color/white"
        android:drawableTop="@drawable/ic_volume_up_black_120dp"
        android:paddingTop="25dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="220dp"
        android:layout_marginTop="148dp"
        android:text="Ingen lyd"
        android:textColor="@android:color/white"
        android:textSize="?attr/font_medium"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="555dp"
        android:layout_marginTop="148dp"
        android:text="formindske lydstyrke"
        android:textColor="@android:color/white"
        android:textSize="?attr/font_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="148dp"
        android:text="forøge lydstyrke"
        android:textColor="@android:color/white"
        android:textSize="?attr/font_medium"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="450dp"
        android:layout_marginTop="44dp"
        android:text="2. Hvor høj skal alarmen være?"
        android:textColor="@android:color/white"
        android:textSize="?attr/font_xlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
