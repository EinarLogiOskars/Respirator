<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggrey"
    tools:context="com.dtucolab.myapplication.TouchFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="637dp"
        android:layout_height="65dp"
        android:layout_marginEnd="411dp"
        android:layout_marginStart="412dp"
        android:layout_marginTop="64dp"
        android:text="1. Hvordan vil patienten bruge appen?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="325dp"
        android:layout_height="200dp"
        android:layout_marginEnd="507dp"
        android:layout_marginStart="448dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/thumbs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="325dp"
        android:layout_height="200dp"
        android:layout_marginEnd="132dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="325dp"
        android:layout_height="200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/touch2"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>
