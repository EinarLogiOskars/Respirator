<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="FontStyle">
    </style>

    <style name="FontStyle.Small">
        <item name="font_small">14sp</item>
        <item name="font_medium">16sp</item>
        <item name="font_large">18sp</item>
        <item name="font_xlarge">20sp</item>
        <item name="font_callBtn">35sp</item>
    </style>

    <style name="FontStyle.Medium">
        <item name="font_small">22sp</item>
        <item name="font_medium">25sp</item>
        <item name="font_large">30sp</item>
        <item name="font_xlarge">36sp</item>
        <item name="font_callBtn">45sp</item>
    </style>

    <style name="FontStyle.Large">
        <item name="font_small">26sp</item>
        <item name="font_medium">30sp</item>
        <item name="font_large">36sp</item>
        <item name="font_xlarge">45sp</item>
        <item name="font_callBtn">60sp</item>
    </style>

</resources>
