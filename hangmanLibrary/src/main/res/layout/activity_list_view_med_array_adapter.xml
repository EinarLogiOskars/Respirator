<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/listeelem_billede"
        android:layout_width="60dip"
        android:layout_height="40dip"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="447dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hangman" />

    <TextView
        android:id="@+id/listeelem_overskrift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listeelem_billede"
        android:layout_alignTop="@+id/listeelem_billede"
        android:text="overskrift"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>